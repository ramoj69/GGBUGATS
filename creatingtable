-- Create Users Table
CREATE TABLE users (
    User_ID INT PRIMARY KEY ,
    First_Name VARCHAR(100),
    Last_Name VARCHAR(100),
    DOB DATE,  -- Date of birth
    Gender VARCHAR(10),
    Height FLOAT,  -- Height in meters
    Weight FLOAT,  -- Weight in kilograms
    Email VARCHAR(100),
    Phone_Number VARCHAR(20)
);

-- Create Activities Table
CREATE TABLE activities (
    Activity_ID INT PRIMARY KEY,
    User_ID INT,  -- Foreign key referencing Users
    Activity_Type VARCHAR(100),  -- E.g., Walking, Running, Cycling
    Steps INT,  -- Steps taken
    Distance FLOAT,  -- Distance in kilometers
    Calories_Burned FLOAT,  -- Calories burned during activity
    Duration FLOAT,  -- Duration in hours or minutes
    Activity_Date DATETIME,  -- Date and time of activity
    FOREIGN KEY (User_ID) REFERENCES users(User_ID)  -- Establishes the relationship
);

-- Create Biometrics Table
CREATE TABLE biometrics (
    Biometrics_ID INT PRIMARY KEY,
    User_ID INT,  -- Foreign key referencing Users
    Heart_Rate INT,  -- Heart rate in bpm
    Blood_Pressure VARCHAR(20),  -- Blood pressure (e.g., 120/80 mmHg)
    Blood_Oxygen FLOAT,  -- Blood oxygen level in percentage
    Weight FLOAT,  -- Weight in kilograms
    BMI FLOAT,  -- Body Mass Index
    Measurement_Date DATETIME,  -- Date and time of measurement
    FOREIGN KEY (User_ID) REFERENCES users(User_ID)  -- Establishes the relationship
);

-- Create Nutrition Table
CREATE TABLE nutrition (
    Nutrition_ID INT PRIMARY KEY,
    User_ID INT,  -- Foreign key referencing Users
    Food_Item VARCHAR(255),  -- Food item name
    Calories FLOAT,  -- Calories in kcal
    Protein FLOAT,  -- Protein in grams
    Carbohydrates FLOAT,  -- Carbohydrates in grams
    Fats FLOAT,  -- Fats in grams
    Meal_Date DATETIME,  -- Date and time of meal
    FOREIGN KEY (User_ID) REFERENCES users(User_ID)  -- Establishes the relationship
);

-- Create Sleep Data Table
CREATE TABLE sleep_data (
    Sleep_ID INT PRIMARY KEY,
    User_ID INT,  -- Foreign key referencing Users
    Sleep_Duration FLOAT,  -- Sleep duration in hours
    Sleep_Quality VARCHAR(50),  -- E.g., Deep sleep, Light sleep, REM
    Sleep_Start DATETIME,  -- Start time of sleep
    Sleep_End DATETIME,  -- End time of sleep
    FOREIGN KEY (User_ID) REFERENCES users(User_ID)  -- Establishes the relationship
);
